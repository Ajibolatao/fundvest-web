<div class="Reset_password">
  <!-- Include partial -->
  <%- include ('../partials/messages') %>

  <form
    action="/reset-password/<%= email %>/<%= resetPasswordCode %>"
    method="post"
    class="py-2 px-4 form"
  >
    <div class="form__head text-center py-2">
      <h3>Enter password</h3>
    </div>

    <div class="form-group">
      <input
        type="password"
        class="form-control"
        placeholder="Enter a new password"
        name="password"
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        class="form-control"
        placeholder="Enter password again"
        name="password2"
      />
    </div>

    <div class="form-group d-flex justify-content-center">
      <input
        type="submit"
        value="Change Password"
        class="btn btn-outline-primary"
      />
    </div>
  </form>
</div>
