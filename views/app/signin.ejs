<script src="/scripts/script.js" defer></script>

<div class="signin">
  <!-- Include partial -->
  <%- include ('../partials/messages') %>

  <div class="">
    <form action="/signin" method="post" class="form px-4 py-2">
      <div class="text-right right py-2 text_sm">
        <span class="color">
          <a href="/signup" class="text-warning">Sign up</a>
        </span>
      </div>
  
      <div class="form__head">
        <h4 class="text-center py-2">Login</h4>
      </div>
  
      <div class="form-group">
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            placeholder="Email"
            name="email"
            required
          />
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <input
            type="password"
            class="form-control passwordInput"
            placeholder="Password"
            name="password"
            id="password"
            required
          />
          <div class="input-group-append seePassword">
            <span class="input-group-text">
              <i class="bi bi-eye"></i>
            </span>
          </div>
        </div>
      </div>
  
      <div class="form-group d-flex justify-content-center">
        <input type="submit" value='login' class="btn btn-outline-primary" />
      </div>
  
      <div class="text-center text-white text_sm ">
        <span class="">
          <a href="/reset-pasword" class="text-warning">Reset password</a></span
        >
      </div>
    </form>

  </div>

</div>


