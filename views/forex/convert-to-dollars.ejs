<script src="/scripts/exchange-currency.js" defer></script>

<!-- EXCHANGE DOLLARS -->
<div class="exchange-dollars">
  <!-- MAIN -->
  <main class="main">
    <!-- LEFT -->
    <%- include ('../partials/sidebar', {active: 'dashboard'}) %>
    <!-- Left ends here -->

    <!-- RIGHT -->
    <div class="main__right">
      <!-- TOP BAR -->
      <div class="top-bar">
        <div>
          <i class="bi bi-arrow-left text-warning"></i>
        </div>
        <div class="">
          <a href="/logout" class="text-warning">logout</a>
        </div>
      </div>

      <!-- PARTIALS MESSAGES -->
      <div class="container">
        <!-- Include partial -->
        <%- include ('../partials/messages') %>
      </div>

      <!-- SPACES -->
      <div class="p-4"></div>
      <div class="p-4"></div>

      <!-- BUYING FORM -->
      <div class="d-flex justify-content-center pt-4">
        <form action="/convert-to-dollars" method="POST" class="form p-3 m-2">
          <div class="header d-flex justify-content-center pb-2">
            <h3>Convert to Dollars</h3>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">$</span>
            </div>
            <input
              type="number"
              id="inputBox"
              class="form-control"
              placeholder="Amount"
              name="amount"
              oninvalid="this.setCustomValidity('Insufficient wallet balance')"
              oninput="this.setCustomValidity('')"
            />
          </div>

          <input
            type="number"
            id="inputBox2"
            class="d-none"
            name="nairaValue"
          />

          <div class="d-flex justify-content-between">
            <small
              >₦ <span class="sellingAmt"><%= sellingPrice %></span>/$
            </small>
            <small>(₦<span class="convertAmt"></span> )</small>
          </div>

          <div class="form-group d-flex justify-content-center">
            <input
              type="submit"
              value="Convert"
              class="btn btn-outline-primary"
            />
          </div>
        </form>
      </div>

    </div>
  </main>

  <!-- FOOTER -->
  <%- include ('../partials/footer', {active: 'dashboard'}) %>
</div>
